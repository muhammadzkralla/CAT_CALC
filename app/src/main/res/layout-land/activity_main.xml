<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="HardcodedText"
    android:background = "#E5E2E2">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="126dp"
        android:layout_height="230dp"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintRight_toLeftOf="@id/topLeft"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/topLeft"
        android:layout_width="106dp"
        android:layout_height="218dp"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintEnd_toStartOf="@+id/constraintLayout"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/recyclerView"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/top"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_marginTop="20dp"
            android:textColor = "#000000"
            android:textSize = "24sp"
            app:layout_constraintTop_toTopOf="@+id/topLeft" />


        <TextView
            android:id="@+id/bottom"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_marginBottom="20dp"
            android:textColor = "#000000"
            android:textSize = "24sp"
            app:layout_constraintBottom_toBottomOf="@+id/topLeft" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="362dp"
        android:layout_height="362dp"
        android:layout_marginLeft="4dp"
        android:layout_marginBottom="16dp"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/topLeft"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="MissingConstraints">


        <Button
            android:id="@+id/name"
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:text="Zkrallah"
            android:backgroundTint = "#91939B"/>

        <Button
            android:id="@+id/c"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:text="C"
            app:layout_constraintLeft_toRightOf="@+id/name"
            android:backgroundTint = "#8A1212"/>

        <Button
            android:id="@+id/plus"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:text="+"
            app:layout_constraintLeft_toRightOf="@+id/c"
            android:backgroundTint = "#8A1212"/>

        <Button
            android:id="@+id/seven"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:text="7"
            app:layout_constraintTop_toBottomOf="@+id/name"
            android:backgroundTint = "#91939B"/>

        <Button
            android:id="@+id/eight"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:text="8"
            app:layout_constraintLeft_toRightOf="@+id/seven"
            app:layout_constraintTop_toBottomOf="@+id/name"
            android:backgroundTint = "#91939B"/>

        <Button
            android:id="@+id/nine"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:text="9"
            app:layout_constraintLeft_toRightOf="@+id/eight"
            app:layout_constraintTop_toBottomOf="@+id/name"
            android:backgroundTint = "#91939B"/>

        <Button
            android:id="@+id/minus"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:text="-"
            app:layout_constraintLeft_toRightOf="@+id/nine"
            app:layout_constraintTop_toBottomOf="@+id/name"
            android:backgroundTint = "#8A1212"/>

        <Button
            android:id="@+id/four"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:text="4"
            app:layout_constraintTop_toBottomOf="@+id/seven"
            android:backgroundTint = "#91939B"/>

        <Button
            android:id="@+id/five"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:text="5"
            app:layout_constraintLeft_toRightOf="@+id/four"
            app:layout_constraintTop_toBottomOf="@+id/seven"
            android:backgroundTint = "#91939B"/>

        <Button
            android:id="@+id/six"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:text="6"
            app:layout_constraintLeft_toRightOf="@+id/five"
            app:layout_constraintTop_toBottomOf="@+id/seven"
            android:backgroundTint = "#91939B"/>

        <Button
            android:id="@+id/times"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:text="X"
            app:layout_constraintLeft_toRightOf="@+id/six"
            app:layout_constraintTop_toBottomOf="@+id/seven"
            android:backgroundTint = "#8A1212"/>

        <Button
            android:id="@+id/one"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:text="1"
            app:layout_constraintTop_toBottomOf="@+id/four"
            android:backgroundTint = "#91939B"/>

        <Button
            android:id="@+id/two"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:text="2"
            app:layout_constraintLeft_toRightOf="@+id/one"
            app:layout_constraintTop_toBottomOf="@+id/four"
            android:backgroundTint = "#91939B"/>

        <Button
            android:id="@+id/three"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:text="3"
            app:layout_constraintLeft_toRightOf="@+id/two"
            app:layout_constraintTop_toBottomOf="@+id/four"
            android:backgroundTint = "#91939B"/>

        <Button
            android:id="@+id/divide"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:text="%"
            app:layout_constraintLeft_toRightOf="@+id/three"
            app:layout_constraintTop_toBottomOf="@+id/four"
            android:backgroundTint = "#8A1212"/>

        <Button
            android:id="@+id/zero"
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:text="0"
            app:layout_constraintTop_toBottomOf="@+id/one"
            android:backgroundTint = "#91939B"/>

        <Button
            android:id="@+id/dot"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:text="."
            app:layout_constraintLeft_toRightOf="@+id/zero"
            app:layout_constraintTop_toBottomOf="@+id/one"
            android:backgroundTint = "#91939B"/>

        <Button
            android:id="@+id/equal"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:text="="
            app:layout_constraintLeft_toRightOf="@+id/dot"
            app:layout_constraintTop_toBottomOf="@+id/one"
            android:backgroundTint = "#303F9F"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>